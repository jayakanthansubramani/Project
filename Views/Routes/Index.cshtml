@model IEnumerable<TransportWeb.Models.Route>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RouteNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stop1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stop2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleNoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RouteNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stop1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stop2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleNoNavigation.VehicleId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoutetId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoutetId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoutetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
